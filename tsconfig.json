{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "types" // Add this line if the declaration file is inside a custom 'types' folder
    ],
    "paths": {
      "~/*": ["*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "react-native-dotenv.d.ts",
    "components/ScreenComponents/ToastMessage.tsx",
    ".env"
  ]
}
